        <item name="colorOnSecondary">@color/black</item> -->
        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> -->
        <!-- Customize your theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">#95EFCE <!--@color/black--> <!--@color/purple_500--></item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Menu Bar -->
        <item name="android:actionMenuTextAppearance">@style/MyTextStyle</item>
    </style>

    <style name="MyTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Rotine.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Rotine.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Rotine.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
