<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNovaRotinaActivity">

    <EditText
        android:id="@+id/edtTxtNomeNovaRotina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome da nova rotina"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <EditText
        android:id="@+id/edtTxtHorarioRotina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Horário"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="@+id/edtTxtNomeNovaRotina"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtTxtNomeNovaRotina"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtNomeNovaRotina" />

    <EditText
        android:id="@+id/edtTxtAcaoASerFeita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Ação a ser feita"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edtTxtHorarioRotina"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtTxtHorarioRotina"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtHorarioRotina" />

    <Button
        android:id="@+id/btnAddNovaRotina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Adicionar Rotina"
        app:layout_constraintEnd_toEndOf="@+id/edtTxtAcaoASerFeita"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/edtTxtAcaoASerFeita"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtAcaoASerFeita" />

</androidx.constraintlayout.widget.ConstraintLayout>